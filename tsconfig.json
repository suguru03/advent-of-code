{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
